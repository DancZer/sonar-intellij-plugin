<idea-plugin version="2">
    <id>org.mayevskiy.intellij.sonar</id>
    <name>SonarQube Community Plugin</name>

    <version>2.0.0</version>

    <vendor email="sonarqube-intellij-plugin@googlegroups.com"
            url="https://github.com/sonar-intellij-plugin/sonar-intellij-plugin">SonarQube Community Intellij Plugin
        Team
    </vendor>

    <description>Connects SonarQube to IntelliJ IDEA</description>

    <change-notes><![CDATA[
      24.02.2014 Fix: NullPointerException running inspection
      20.11.2013 Improvement: Better detection of new rules<br>
      20.11.2013 Feature: Mark as fixed locally quick fix<br>
      19.11.2013 Fix: No violations found in non intellij IDEs<br>
      18.11.2013 Improvement: Violations are shown in a more sonar way: mark the whole line instead of one element<br>
      18.11.2013 Fix: Module configuration is not mandatory anymore<br>
      10.08.2013 Fix: IllegalArgumentException when IntelliJ IDEA 12 loses focus<br>
      08.08.2013 Fix: Connection test unsuccessful if server url ends with "/"<br>
      08.08.2013 Fix: Exception with Intellij11 on "Open Module Settings"<br>
      08.08.2013 Fix: Password is visible<br>
      08.08.2013 Fix: Invalid major/minor version exception<br>
      22.06.2013 Support for phpstorm<br>
      20.06.2013 Transformation of sonar violations severity to intellij inspection highlight level (avoids to show every violation unnecessary as warning) <br>
      14.05.2013 Added support for multi module sonar projects<br>
      10.03.2013 Added support for simple sonar projects<br>
      ]]>
    </change-notes>

    <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
    <!--<idea-version since-build="99.18" until-build="111"/> &lt;!&ndash; Intellij 10 &ndash;&gt;-->
    <!--<idea-version since-build="111.69" until-build="123.0"/> &lt;!&ndash; Intellij 11 &ndash;&gt;-->
    <idea-version since-build="123.0"/>
    <!-- Intellij 12+ -->

    <depends>com.intellij.modules.lang</depends>

    <project-components>
        <component>
            <implementation-class>org.intellij.sonar.persistence.ProjectSettings</implementation-class>
        </component>
        <!--
        <component>
            <implementation-class>org.intellij.sonar.console.SonarConsole</implementation-class>
        </component>
        <component>
            <implementation-class>
                org.intellij.sonar.FileChangeListener
            </implementation-class>
        </component>
        <component>
            <implementation-class>
                org.intellij.sonar.FileEditorListener
            </implementation-class>
        </component>
        <component>
            <implementation-class>
                org.intellij.sonar.persistence.ChangedFilesComponent
            </implementation-class>
        </component>-->
        <component>
            <implementation-class>
                org.intellij.sonar.DocumentChangeListener
            </implementation-class>
        </component>
        <!--<component>
            <implementation-class>
                org.intellij.sonar.analysis.NotificationManager
            </implementation-class>
        </component>-->
        <!--
        <component>
            <implementation-class>
                org.intellij.sonar.persistence.IndexComponent
            </implementation-class>
        </component>-->
        <component>
            <implementation-class>
                org.intellij.sonar.persistence.IssuesByFileIndexProjectComponent
            </implementation-class>
        </component>
    </project-components>

    <module-components>
        <component>
            <implementation-class>org.intellij.sonar.persistence.ModuleSettings</implementation-class>
        </component>
    </module-components>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable id="projectSettingsConfigurable"
                             instance="org.intellij.sonar.configuration.project.ProjectSettingsConfigurable"/>
        <moduleConfigurable id="moduleSettingsConfigurable"
                            instance="org.intellij.sonar.configuration.module.ModuleSettingsConfigurable"/>
        <applicationService serviceImplementation="org.intellij.sonar.persistence.SonarServers" />
        <applicationService serviceImplementation="org.intellij.sonar.persistence.LocalAnalysisScripts" />
        <applicationService serviceImplementation="org.intellij.sonar.persistence.SonarResourcesComponent" />
       <!--
        <inspectionToolProvider implementation="org.intellij.sonar.SonarInspectionToolProvider"/>
        <projectService serviceImplementation="org.intellij.sonar.SonarIssuesProvider"/>
        <projectService serviceImplementation="org.intellij.sonar.persistence.SonarRulesComponent"/>
        <projectService serviceImplementation="org.intellij.sonar.persistence.IndexComponent"/>

        <toolWindow id="Sonar" anchor="bottom" icon="/images/onde-sonar-13.png" factoryClass="org.intellij.sonar.console.SonarToolWindowFactory"/>
      -->  <!--<globalInspection
                implementationClass="org.intellij.sonar.analysis.SonarGlobalInspectionTool"/>-->
        <codeInspection.InspectionExtension id="sonarqubeInspection"
                                            implementation="org.intellij.sonar.analysis.SonarQubeInspectionExtensionsFactory"/>

        <inspectionToolProvider
                implementation="org.intellij.sonar.InspectionToolProviderOne" />
        <codeInsight.linkHandler id="issueDescriptionLinkHandler" prefix="#sonarissue/" handlerClass="org.intellij.sonar.analysis.IssueDescriptionLinkHandler" />
    </extensions>

    <application-components>
        <component>
            <implementation-class>
                org.intellij.sonar.ApplicationComponent
            </implementation-class>
        </component>
    </application-components>
</idea-plugin>