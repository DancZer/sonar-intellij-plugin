<idea-plugin version="2">
    <id>org.mayevskiy.intellij.sonar</id>
    <name>Sonar Connector</name>
    <version>1.0</version>
    <vendor email="omayevskiy@gmail.com" url="https://github.com/omayevskiy/sonar-intellij-plugin">Oleg Mayevskiy
    </vendor>
    <vendor email="sonar-intellij-plugin@plushnikov.de" url="https://github.com/omayevskiy/sonar-intellij-plugin">
        Michail Plushnikov
    </vendor>

    <description><![CDATA[
      Enter short description for your plugin here.<br>
      <small>most HTML tags may be used</small>
      ]]></description>

    <change-notes><![CDATA[
      Added support for simple sonar projects.<br>
      <small>most HTML tags may be used</small>
      ]]>
    </change-notes>

    <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="107.105"/>

    <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->

    <depends>com.intellij.modules.lang</depends>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
        <component>
            <implementation-class>org.mayevskiy.intellij.sonar.component.SonarProjectComponent</implementation-class>
        </component>
    </project-components>

    <actions>

    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable id="SonarProjectSettingsConfigurable"
                             instance="org.mayevskiy.intellij.sonar.SonarProjectSettingsConfigurable"/>
        <inspectionToolProvider implementation="org.mayevskiy.intellij.sonar.inspection.InspectionProvider"/>
    </extensions>

</idea-plugin>